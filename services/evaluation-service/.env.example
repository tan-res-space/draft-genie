# Application
APP_NAME=evaluation-service
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8004
LOG_LEVEL=INFO

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=evaluation_db
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=draft_genie
RABBITMQ_EXCHANGE_TYPE=topic

# External Services
SPEAKER_SERVICE_URL=http://localhost:8001
DRAFT_SERVICE_URL=http://localhost:8002
RAG_SERVICE_URL=http://localhost:8003

# Evaluation Settings
SIMILARITY_THRESHOLD=0.7
QUALITY_THRESHOLD=0.8
IMPROVEMENT_THRESHOLD=0.15

# Sentence Transformer Model
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

# Bucket Reassignment Thresholds
BUCKET_A_QUALITY_THRESHOLD=0.9
BUCKET_B_QUALITY_THRESHOLD=0.7
BUCKET_C_QUALITY_THRESHOLD=0.5


# Application
APP_NAME=draft-service
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
PORT=8001
HOST=0.0.0.0

# MongoDB
MONGODB_URL=mongodb://draftgenie:draftgenie123@localhost:27017/draftgenie?authSource=admin
MONGODB_DATABASE=draftgenie
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=100

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=correction_vectors
QDRANT_VECTOR_SIZE=768

# RabbitMQ
RABBITMQ_URL=amqp://draftgenie:draftgenie123@localhost:5672/
RABBITMQ_EXCHANGE=draft-genie.events
RABBITMQ_QUEUE=draft.events
RABBITMQ_ROUTING_KEY=draft.*

# Gemini API
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=models/embedding-001
GEMINI_EMBEDDING_DIMENSION=768

# InstaNote Mock API
INSTANOTE_API_URL=http://localhost:8080/api
INSTANOTE_API_KEY=mock-api-key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# API Documentation
DOCS_URL=/api/docs
REDOC_URL=/api/redoc
OPENAPI_URL=/api/openapi.json


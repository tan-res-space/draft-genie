# Application
APP_NAME=rag-service
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8003

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=draft_genie
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=100

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=correction_vectors
QDRANT_VECTOR_SIZE=768

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=draft_genie_events
RABBITMQ_QUEUE=rag_service_queue

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=models/gemini-pro
GEMINI_EMBEDDING_MODEL=models/embedding-001
GEMINI_EMBEDDING_DIMENSION=768
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048
GEMINI_TOP_P=0.95
GEMINI_TOP_K=40

# External Services
SPEAKER_SERVICE_URL=http://localhost:8001
DRAFT_SERVICE_URL=http://localhost:8002

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# API Documentation
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json


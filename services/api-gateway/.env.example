# API Gateway Configuration

# Server
PORT=3000
NODE_ENV=development

# JWT Authentication
JWT_SECRET=draft-genie-secret-change-in-production
JWT_EXPIRES_IN=24h

# API Keys for service-to-service communication (comma-separated)
API_KEYS=service-key-1,service-key-2,service-key-3

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:4200

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Backend Service URLs
SPEAKER_SERVICE_URL=http://localhost:3001
DRAFT_SERVICE_URL=http://localhost:3002
RAG_SERVICE_URL=http://localhost:3003
EVALUATION_SERVICE_URL=http://localhost:3004

# Swagger Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs

# Logging
LOG_LEVEL=debug


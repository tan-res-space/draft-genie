{
  "name": "draft-genie",
  "version": "1.0.0",
  "description": "DraftGenie - Speaker-centric AI-powered draft improvement system",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "test:cov": "nx run-many --target=test --all --coverage",
    "lint": "nx run-many --target=lint --all",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "db:migrate": "nx run speaker-service:prisma:migrate",
    "db:seed": "nx run speaker-service:seed",
    "dev:speaker": "nx serve speaker-service",
    "dev:draft": "nx serve draft-service",
    "dev:rag": "nx serve rag-service",
    "dev:gateway": "nx serve api-gateway",
    "dev:all": "nx run-many --target=serve --all --parallel=4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@nx/eslint": "^18.0.0",
    "@nx/jest": "^18.0.0",
    "@nx/js": "^18.0.0",
    "@nx/nest": "^18.0.0",
    "@nx/node": "^18.0.0",
    "@nx/webpack": "^21.6.3",
    "@nx/workspace": "^18.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/diff": "^5.0.9",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@types/passport-jwt": "^4.0.0",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "ignore-loader": "^0.1.2",
    "jest": "^29.7.0",
    "null-loader": "^4.0.1",
    "nx": "^18.0.0",
    "prettier": "^3.2.4",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "@nestjs/axios": "^3.0.1",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mongoose": "^10.0.2",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.2.0",
    "@nestjs/terminus": "^10.2.0",
    "@nestjs/throttler": "^5.1.1",
    "@prisma/client": "^5.8.0",
    "@qdrant/js-client-rest": "^1.7.0",
    "axios": "^1.6.5",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "diff": "^5.1.0",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "mongoose": "^8.0.4",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prisma": "^5.8.0",
    "redis": "^4.6.12",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
